doctype html
html(lang="ru")
    head
        block header
            meta(charset="UTF-8")
            meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
            title= "Kinder-Biovital | Административная панель"
            link(href="/js/lib/admin-lte/css/bootstrap.min.css" rel="stylesheet" type="text/css")
            link(href="/js/lib/admin-lte/css/font-awesome.min.css" rel="stylesheet" type="text/css")
            link(href="/js/lib/admin-lte/css/ionicons.min.css" rel="stylesheet" type="text/css")
            link(href="/js/lib/admin-lte/css/AdminLTE.css" rel="stylesheet" type="text/css")
    body.skin-blue
        header.header
            a.logo(href="dashboard")= "Админ-панель"
            nav.navbar.navbar-static-top(role="navigation")
                a.navbar-btn.sidebar-toggle(href="#" data-toggle="offcanvas" role="button")
                    span.sr-only= "Toggle navigation"
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                .navbar-right
                    ul.nav.navbar-nav
                        li.dropdown.user.user-menu
                            a.dropdown-toggle(href="#" data-toggle="dropdown")
                                i.glyphicon.glyphicon-user
                                span= user.username
                                i.caret
                            ul.dropdown-menu
                                li.user-footer
                                    .pull-right
                                        a.btn.btn-default.btn-flat(href="/admin/logout")= "Выйти"
        .wrapper.row-offcanvas.row-offcanvas-left
            aside.left-side.sidebar-offcanvas
                section.sidebar
                    ul.sidebar-menu
                        li(class= (currentHref == 'dashboard' ? "active" : ""))
                            a.module(href="/admin/dashboard")
                                i.fa.fa-dashboard
                                span= "Главная"
            aside#moduleContent
                block content
        block scripts
            script(src="/js/lib/requirejs/require.js" data-main="/js/app/admin/core/core.js")
            script.
                window.langs = !{JSON.stringify(langs)}